<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Public Files</title>

</head>

<body>

  <div id="layout">

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="/">Contents</a>

              <ul class="pure-menu-list">
                <% @contents.each do |file| %>
                  <li class="pure-menu-item">
                  <a href="<%= file.split("/").last %>" class="pure-menu-link"><%= file.split("/").last %></a>
                  </li>
                <% end %>
              </ul>
          </div>
      </div>

  </div>
</body>
</html>
