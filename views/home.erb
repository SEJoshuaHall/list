<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Cat Files</title>

</head>

<body>

  <div id="layout">

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="/">Cat File Contents</a>

              <ul class="pure-menu-list">
                <% @contents.each do |file| %>
                  <li class="pure-menu-item">
                  <a href="<%= file.split("/").last %>" class="pure-menu-link"><%= file.split("/").last %></a>
                  </li>
                <% end %>
              </ul>
          </div>
      </div>

  </div>
  <div id="sort"
    <p>Here are your sort options: </p>
    <a href='?order=ascending'>Ascending Order</a>
    <a href='?order=descending'>Descending Order</a>
  </div>
</body>
</html>
